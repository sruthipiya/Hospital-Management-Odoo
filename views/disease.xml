<?xml version="1.0"?>
<odoo>
    <record id="disease_action" model="ir.actions.act_window">
        <field name="name">Disease Details</field>
        <field name="res_model">disease.details</field>
        <field name="view_mode">tree</field>
    </record>
    <record id="disease_tree_view" model="ir.ui.view">
        <field name="name">Diseases</field>
        <field name="model">disease.details</field>
        <field name="arch" type="xml">
            <tree string="Diseases" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>
</odoo>